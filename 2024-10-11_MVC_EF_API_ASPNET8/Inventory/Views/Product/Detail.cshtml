@using Inventory.Shared.Models
@model Product

@{
	ViewBag.Title = "Product Detail";
}

<h1>Product Detail</h1>
<form asp-action="Update Product" method="post">
	<table class="table table-bordered table-striped">
		<tr>
			<td>ID</td>
			<td>
				@Model.ProductId
				<input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
			</td>
		</tr>
		<tr>
			<td>Name</td>
			<td>
				<input asp-for="Name" class="form-control" value="@Model.Name" required />
			</td>
		</tr>
		<tr>
			<td>Description</td>
			<td>
				<input asp-for="Description" class="form-control" value="@Model.Description" />
			</td>
		</tr>
		<tr>
			<td>Price</td>
			<td>
				$<input asp-for="Price" asp-format="{0:C}" type="number"
				class="d-inline-block form-control"
				style="width: calc(100%-1.2em); margin-left: 0.2em;"
				step="0.01" requiredvalue="@Math.Round(Model.Price, 2)" />
			</td>
		</tr>
		<tr>
			<td>Stock Quantity</td>
			<td>
				<input asp-for="StockQuantity" class="form-control" type="number" step="1" requiredValue="@Model.StockQuantity" />
			</td>
		</tr>
		<tr>
			<td>Date Added</td>
			<td>
				<input asp-for="DateAdded" class="form-control" type="date" requiredValue="@Model.DateAdded" />
			</td>
		</tr>
	</table>

	<button type="submit" class="btn btn-primary">Save</button>
	<button type="reset" class="btn btn-warning">Reset</button>
	<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
		Home
	</a>
</form>


<form asp-action="DeleteProduct" method="post" class="mt-3">
	<input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
	<input type="hidden" asp-for="Name" value="@Model.Name" />
	<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete? this product?');" >Delete</button>'"
</form>





<!--Shows detailed information about a specific product-->