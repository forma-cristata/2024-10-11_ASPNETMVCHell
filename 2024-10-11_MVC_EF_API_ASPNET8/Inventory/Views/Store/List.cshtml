@using Inventory.Shared.Models
@model List<Store>

@{
	ViewBag.Title = "Store List";
}

<h1>Store List</h1>
<table class="table table-bordered table-striped">
	<thead>
	<th>ID</th>
	<th>Name</th>
	<th>Location</th>
	<th>Date Opened</th>
	</thead>
	<tbody>
		@foreach (Store store in Model)
		{
			<tr>
				<td>@store.StoreId</td>
				<td>
					<a asp-controller="Store" asp-action="Detail" asp-route-id="@store.Slug">@store.Name</a>
				</td>
				<td>@store.Location</td>
				<td>@store.DateOpened.ToString()</td>
			</tr>
		}
	</tbody>
</table>










