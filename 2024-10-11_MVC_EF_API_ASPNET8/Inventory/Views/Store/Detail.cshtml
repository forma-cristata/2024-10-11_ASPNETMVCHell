@using Inventory.Shared.Models
@model Store

@{
	ViewBag.Title = "Store Detail";
}

<h1>Store Detail</h1>
<form asp-action="Update Store" method="post">
	<table class="table table-bordered table-striped">
		<tr>
			<td>ID</td>
			<td>
				@Model.StoreId
				<input type="hidden" asp-for="StoreId" value="@Model.StoreId" />
			</td>
		</tr>
		<tr>
			<td>Name</td>
			<td>
				<input asp-for="Name" class="form-control" value="@Model.Name" required />
			</td>
		</tr>
		<tr>
			<td>Location</td>
			<td>
				<input asp-for="Location" class="form-control" value="@Model.Location" required/>
			</td>
		</tr>
		<tr>
			<td>Date Opened</td>
			<td>
				<input asp-for="DateOpened" class="form-control" type="date" requiredValue="@Model.DateOpened" />
			</td>
		</tr>
	</table>

	<button type="submit" class="btn btn-primary">Save</button>
	<button type="reset" class="btn btn-warning">Reset</button>
	<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
		Home
	</a>
</form>


<form asp-action="DeleteStore" method="post" class="mt-3">
	<input type="hidden" asp-for="StoreId" value="@Model.StoreId" />
	<input type="hidden" asp-for="Name" value="@Model.Name" />
	<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete? this store?');">Delete</button>'"
</form>





<!--Shows detailed information about a specific store, including the products available at that store-->